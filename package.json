{
  "name": "Avega-rummy",
  "version": "1.1.0",
  "description": "Avega Rummy",
  "main": "server.js",
  "scripts": {
    "start": "node shell.js",
    "test": "mocha --exit",
    "lint": "eslint *.js",
    "dist-lint": "eslint dist/js/*.js",
    "scss": "node-sass src/ -o dist/css/",
    "autoprefix": "postcss --use autoprefixer -o dist/css/main.css dist/css/main.css && postcss --use autoprefixer -o dist/css/cards.css dist/css/cards.css",
    "build-css": "npm run scss && npm run autoprefix",
    "watch-css": "node-sass src/ --watch -o dist/css/",
    "lint-test": "elsint test/*.js"
  },
  "keywords": [
    "Rummy"
  ],
  "author": "Avega",
  "license": "MIT",
  "dependencies": {
    "async": "^2.6.1",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.0",
    "nodemon": "^1.18.9",
    "passport-google-oauth20": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "shelljs": "^0.8.3",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "eslint": "^4.13.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "node-sass": "^4.9.3",
    "postcss-cli": "^4.1.1",
    "sinon": "^4.1.3"
  }
}
